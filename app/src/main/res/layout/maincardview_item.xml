<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intro"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    tools:context="com.fcteam6project.mybooks.MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:id="@+id/cv_research"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl_research"
            android:gravity="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/iv_research_bookcover"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:gravity="start" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/iv_research_bookcover"
                android:layout_toEndOf="@+id/iv_research_bookcover"
                android:gravity="center_horizontal|start"
                >

                <TextView
                    android:text="title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/tv_research_title"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_weight="4" />

                <TextView
                    android:text="author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_research_author"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:textSize="10dp"
                    android:layout_weight="1" />

            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_star_border_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:id="@+id/imgBtn_research_unfavorite" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_star_yellow_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:id="@+id/imgBtn_research_favorite"
        android:visibility="invisible" />

    <TextView
        android:text="Detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imgBtn_research_unfavorite"
        android:layout_alignEnd="@+id/imgBtn_research_unfavorite"
        android:textColor="#ffffff"
        android:layout_marginTop="80dp"
        android:id="@+id/tv_maincardview_todetail" />

</RelativeLayout>
